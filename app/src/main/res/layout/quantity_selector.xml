<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <FrameLayout
        android:id="@+id/minusContainer"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:translationY="-13dp"

        app:layout_constraintEnd_toStartOf="@id/centerCircle"
        app:layout_constraintTop_toTopOf="@id/centerCircle"
        app:layout_constraintBottom_toBottomOf="@id/centerCircle"
        android:layout_marginEnd="-12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_panda"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_minus"/>
    </FrameLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/centerCircle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        android:translationY="13dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/ticketCountText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#7A7A7A"/>
    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:id="@+id/plusContainer"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:translationY="-13dp"
        app:layout_constraintStart_toEndOf="@id/centerCircle"
        app:layout_constraintTop_toTopOf="@id/centerCircle"
        app:layout_constraintBottom_toBottomOf="@id/centerCircle"
        android:layout_marginStart="-12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_panda" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_plus" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
