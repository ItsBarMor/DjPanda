<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".PartyProfile">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

        <TextView
            android:id="@+id/partyNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Party Name"
            android:textSize="34sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/partyImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/party_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/partyDateTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:fontFamily="@font/poppins_semibold"
                android:textSize="25sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/dj_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Dj Panda"
                android:textSize="25sp"
                app:fontFamily="@font/poppins_bold"
                android:textColor="#9C27B0"
                android:layout_marginStart="4dp"/></LinearLayout>

            <TextView
                android:id="@+id/partyLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="22sp"
                app:fontFamily="@font/poppins_medium"
                android:gravity="center" />

        <TextView
            android:id="@+id/partyDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="17sp"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="24dp"/>

        <TextView
            android:id="@+id/partyPricesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            />

        <Button
            android:id="@+id/button_to_djs_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DJ Profile"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/button_to_buying_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Buy Tickets"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>

